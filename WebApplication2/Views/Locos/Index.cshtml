@model IEnumerable<Locos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Добавить элемент", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название локомотива
        </th>
        <th>
            Состояние
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LocoName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.idLoco }) |
            @Html.ActionLink("Детали", "Details", new { id=item.idLoco }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.idLoco })
        </td>
    </tr>
}

</table>
